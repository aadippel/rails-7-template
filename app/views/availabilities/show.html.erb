<div>
  <div>
    <h1>
      Availability #<%= @the_availability.id %> details
    </h1>

    <div>
      <div>
        <a href="/availabilities">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_availability/<%= @the_availability.id %>">
          Delete availability
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_availability.user_id %>
      </dd>

      <dt>
        Start time
      </dt>
      <dd>
        <%= @the_availability.start_time %>
      </dd>

      <dt>
        End time
      </dt>
      <dd>
        <%= @the_availability.end_time %>
      </dd>

      <dt>
        Day of week
      </dt>
      <dd>
        <%= @the_availability.day_of_week %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_availability.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_availability.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit availability
    </h2>

    <form action="/modify_availability/<%= @the_availability.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_availability.user_id %>">
      </div>

      <div>
        <label for="start_time_box">
          Start time
        </label>

        <input type="time" id="start_time_box" name="query_start_time" value="<%= @the_availability.start_time %>">
      </div>

      <div>
        <label for="end_time_box">
          End time
        </label>

        <input type="time" id="end_time_box" name="query_end_time" value="<%= @the_availability.end_time %>">
      </div>

      <div>
        <label for="day_of_week_box">
          Day of week
        </label>

        <input type="text" id="day_of_week_box" name="query_day_of_week" value="<%= @the_availability.day_of_week %>">
      </div>

      <button>
        Update availability
      </button>
    </form>
  </div>
</div>

<hr>
